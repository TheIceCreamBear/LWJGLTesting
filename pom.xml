<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
        >
    
    <modelVersion>4.0.0</modelVersion>
    <groupId>dev.ticb</groupId>
    <artifactId>lwjgl-testing</artifactId>
    <name>LWJGLTesting</name>

    <version>${revision}</version>
    <packaging>jar</packaging>

    <properties>
        <revision>1.0.0-SNAPSHOT</revision>
        <lwjgl.version>3.3.6</lwjgl.version>
        <joml.version>1.9.25</joml.version>

        <!-- maven properties for config -->
        <!-- CANT USE 21 or newer because of com.sun.media.sound, could be fixed by switching to lwjgl-assimp -->
        <maven.compiler.release>8</maven.compiler.release>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>${project.build.sourceEncoding}</project.reporting.outputEncoding>
    </properties>

    <build>
        <!-- override the way maven pulls directories to make the maven transition easier without needing to move directories at first -->
        <sourceDirectory>src</sourceDirectory>
        <resources>
            <resource>
                <directory>res</directory>
            </resource>
            <resource>
                <!-- this is a bad pattern, and should be changed eventually -->
                <directory>src/com/joseph/test/lwjgl3/grid</directory>
                <includes>
                    <include>grid.frag</include>
                    <include>grid.geom</include>
                    <include>grid.vert</include>
                </includes>
                <targetPath>com/joseph/test/lwjgl3/grid</targetPath>
            </resource>
            <resource>
                <!-- this is a bad pattern, and should be changed eventually -->
                <directory>src/com/joseph/test/lwjgl3/gui</directory>
                <includes>
                    <include>gui.frag</include>
                    <include>gui.vert</include>
                </includes>
                <targetPath>com/joseph/test/lwjgl3/gui</targetPath>
            </resource>
            <resource>
                <!-- this is a bad pattern, and should be changed eventually -->
                <directory>src/com/joseph/test/lwjgl3/leading/render</directory>
                <includes>
