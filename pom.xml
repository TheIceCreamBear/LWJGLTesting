                </includes>
                <targetPath>com/joseph/test/lwjgl3/leading/render</targetPath>
            </resource>
            <resource>
                <!-- this is a bad pattern, and should be changed eventually -->
                <directory>src/com/joseph/test/lwjgl3/particle/cube</directory>
                <includes>
