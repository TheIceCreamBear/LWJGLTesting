                </includes>
                <targetPath>com/joseph/test/lwjgl3/particle</targetPath>
            </resource>
            <resource>
                <!-- this is a bad pattern, and should be changed eventually -->
                <directory>src/com/joseph/test/lwjgl3/reflectionmap/cubemap</directory>
                <includes>
                    <include>cube.frag</include>
                    <include>cube.vert</include>
                </includes>
                <targetPath>com/joseph/test/lwjgl3/reflectionmap/cubemap</targetPath>
            </resource>
            <resource>
                <!-- this is a bad pattern, and should be changed eventually -->
                <directory>src/com/joseph/test/lwjgl3/reflectionmap/render</directory>
