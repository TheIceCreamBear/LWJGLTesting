            </resource>
            <resource>
                <!-- this is a bad pattern, and should be changed eventually -->
                <directory>src/com/joseph/test/lwjgl3/renderer/nm</directory>
                <includes>
                    <include>normalMap.frag</include>
                    <include>normalMap.vert</include>
                </includes>
                <targetPath>com/joseph/test/lwjgl3/renderer/nm</targetPath>
            </resource>
            <resource>
