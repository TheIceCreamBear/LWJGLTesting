                </includes>
                <targetPath>com/joseph/test/lwjgl3/renderer/postprocess/contrast</targetPath>
            </resource>
            <resource>
                <!-- this is a bad pattern, and should be changed eventually -->
                <directory>src/com/joseph/test/lwjgl3/renderer/postprocess/gaussianblur</directory>
                <includes>
                    <include>blur.frag</include>
                    <include>hblur.vert</include>
